<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="시간 제한 설정"
            android:textSize="25sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/time_limit_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20sp">
        <EditText
            android:id="@+id/limit_hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="시간"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/limit_minute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="분"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/limit_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="초"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="초기화 시각"
        android:textSize="20sp"
        android:paddingStart="10sp"/>
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:paddingBottom="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20sp">
        <TextView
            android:id="@+id/time_limit_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어플 제한"
            android:clickable="true"
            android:textSize="20sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/application_limit_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="셀카 자동 업로드"
            android:textSize="20sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/selfie_upload_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>