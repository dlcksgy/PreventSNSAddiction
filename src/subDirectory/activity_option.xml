<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/time_limit_on_off"
            android:textSize="25sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/time_limit_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20sp">
        <EditText
            android:id="@+id/limit_hour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="hour"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/limit_minute"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="min"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
        <EditText
            android:id="@+id/limit_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="sec"
            android:gravity="center"
            android:layout_weight="1"
            android:inputType="number"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time_to_initialize"
        android:textSize="20sp"
        android:paddingStart="10sp"/>
    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:paddingBottom="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limit_setting"
            android:textSize="20sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/application_limit_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selfie_upload"
            android:textSize="20sp"
            android:paddingStart="10sp"/>
        <CheckBox
            android:id="@+id/selfie_upload_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20sp">
        <Button
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ok"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cancel"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>